# ======================== 基础目标配置 (调整根分区大小为1024MB) ========================
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

# 固件分区大小：内核分区12MB（足够），根分区1024MB（1GB）
CONFIG_TARGET_KERNEL_PARTSIZE=12
CONFIG_TARGET_ROOTFS_PARTSIZE=1024  # 核心修改：从500改为1024

# 固件类型
CONFIG_GRUB_IMAGES=y
CONFIG_GRUB_EFI_IMAGES=y
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_TARGZ=y
# CONFIG_GRUB_CONSOLE is not set
# CONFIG_TARGET_ROOTFS_EXT4FS is not set
# CONFIG_VMDK_IMAGES is not set

# ======================== 系统核心依赖 (确保LuCI界面正常运行) ========================
CONFIG_PACKAGE_luci=y                    # LuCI Web管理界面（必须保留）
CONFIG_PACKAGE_luci-base=y               # LuCI核心基础
CONFIG_PACKAGE_luci-mod-admin-full=y     # 完整的系统管理配置界面
CONFIG_PACKAGE_luci-lib-ipkg=y           # LuCI包管理依赖
CONFIG_PACKAGE_luci-lib-nixio=y          # LuCI系统交互依赖
CONFIG_PACKAGE_luci-firewall=y           # 防火墙LuCI配置界面

# ======================== 核心组件 (带完整配置界面) ========================
# 1. TTYD (网页终端)
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_ttyd=y
CONFIG_PACKAGE_luci-i18n-ttyd-zh-cn=y

# 2. Turbo ACC 网络加速
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_luci-i18n-turboacc-zh-cn=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_OFFLOADING=y
CONFIG_PACKAGE_kmod-shortcut-fe=y
CONFIG_PACKAGE_kmod-shortcut-fe-cm=y
# CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_DNSFORWARDER is not set
# CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_DNSPROXY is not set

# 3. PassWall
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-i18n-passwall-zh-cn=y
CONFIG_PACKAGE_luci-app-passwall_Iptables_Transparent_Proxy=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Brook=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Hysteria=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_NaiveProxy=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Shadowsocks_Rust_Client=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_ShadowsocksR_Libev_Server=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Trojan_GO=y
# CONFIG_PACKAGE_luci-app-passwall_INCLUDE_V2ray_Plugin is not set

# 4. Docker (Dockerman)
CONFIG_PACKAGE_luci-app-dockerman=y
CONFIG_PACKAGE_docker=y
CONFIG_PACKAGE_docker-compose=y
CONFIG_PACKAGE_luci-i18n-dockerman-zh-cn=y
CONFIG_PACKAGE_containerd=y
CONFIG_PACKAGE_runc=y

# 5. Argon 主题
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-argon-config=y
CONFIG_PACKAGE_luci-i18n-argon-config-zh-cn=y

# ======================== 基础实用工具 ========================
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano-plus=y
CONFIG_PACKAGE_vim-fuller=y
CONFIG_PACKAGE_zsh=y

